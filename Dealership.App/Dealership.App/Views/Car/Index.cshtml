@model IEnumerable<Dealership.App.Models.Car.CarViewModel>

<div class="w3-panel">
    <div class="w3-row-padding" style="margin:0 -16px">
        <div class="w3-twothird">
            <h5>Cars in Stock</h5>
            @if (Model.Count() > 0)
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Car Brand</th>
                            <th scope="col">Car Model</th>
                            <th scope="col">Foto(to be inserted)</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                        <tr>
                            <td scope="row">@car.CarBrand.CarBrandName</td>
                            <td scope="row">@car.CarModel.CarModelName</td>
                            <td scope="row"><img src="~/images/@car.ImageName" style="width: 400px;"/></td>
                            <td><a asp-action="Update" asp-controller="Car" asp-route-Id="@car.CarId" class="btn btn-primary mx1">Edit</a></td>
                            <td><a asp-action="" asp-controller="" asp-route-Id="" class="btn btn-danger mx1">Delete</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Car Models</p>
            }
        </div>
    </div>
</div>
<hr>