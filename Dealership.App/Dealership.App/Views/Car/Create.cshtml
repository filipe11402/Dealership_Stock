@model Dealership.App.Models.Car.CreateCarViewModel

<form asp-action="CreatePost" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="BrandName">Brand</label>
        @Html.DropDownListFor(
           carBrand => carBrand.CarBrandId,
           new SelectList(Model.CarBrands, "CarBrandId", "CarBrandName"),
           "Select Car brand"
        )
    </div>
    <div class="form-group">
        <label for="BrandName">Brand</label>
        @Html.DropDownListFor(
           carBrand => carBrand.CarModelId,
           new SelectList(Model.CarModels, "CarModelId", "CarModelName"),
           "Select Car brand"
        )
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Upload</span>
        </div>
        <div class="custom-file">
            <input asp-for="Image" class="custom-file-input" id="inputGroupFile01">
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

